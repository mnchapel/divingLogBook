<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mnchapel.divinglogbook">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".HomeMenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BaseDriveActivity" />
        <activity
            android:name=".DiveSummaryEditActivity"
            android:label="@string/title_activity_dive_summary_edit" />
        <activity
            android:name=".com.mnchapel.divinglogbook.equipment.DiveEquipmentEditActivity"
            android:label="@string/title_activity_dive_equipement_edit" />
        <activity
            android:name=".com.mnchapel.divinglogbook.equipment.DiveEquipmentTankEditActivity"
            android:label="@string/title_activity_dive_equipment_tank_edit"></activity>
        <activity android:name=".com.mnchapel.divinglogbook.equipment.DiveEquipmentSuitEditActivity"></activity>
    </application>

</manifest>