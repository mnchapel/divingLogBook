<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_gradient"
    android:fillViewport="true"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:outlineProvider="bounds"
    tools:context="com.mnchapel.divinglogbook.DiveSummaryFragment">

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent" >

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingTop="20dp">

            <!-- General section -->
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/generalSection"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:layout_width="match_parent"
                    android:text="@string/dive_summary_general_section_title"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textColor="@color/white" />

                <!-- Date -->
                <LinearLayout
                    android:background="?attr/selectableItemBackground"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent">

                    <ImageView
                        android:contentDescription="@string/ic_calendar"
                        android:id="@+id/diveSummaryDateIcon"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_calendar_white" />

                    <TextView
                        android:id="@+id/diveSummaryDateValue"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/white" />
                </LinearLayout>

                <!-- Site -->
                <LinearLayout
                    android:background="?attr/selectableItemBackground"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">

                    <ImageView
                        android:contentDescription="@string/ic_map_marker"
                        android:id="@+id/diveSummaryMapMarkerIconSite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_map_marker_white" />

                    <TextView
                        android:id="@+id/diveSummarySiteValue"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/white" />
                </LinearLayout>

                <!-- Town/Country -->
                <LinearLayout
                    android:background="?attr/selectableItemBackground"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent">

                    <ImageView
                        android:contentDescription="@string/ic_map_marker"
                        android:id="@+id/diveSummaryMapMarkerIconTownCountry"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="10dp"
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_map_marker_white"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/diveSummaryTownValue"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:text="@string/comma"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/diveSummaryCountryValue"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="@color/white" />
                </LinearLayout>

                <!-- Objective -->
                <LinearLayout
                    android:background="?attr/selectableItemBackground"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent">

                    <ImageView
                        android:contentDescription="@string/ic_target"
                        android:id="@+id/diveSummaryTownTargetIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_target_white" />

                    <TextView
                        android:id="@+id/diveSummaryObjectiveValue"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/white" />
                </LinearLayout>

                <!-- Buddy -->
                <LinearLayout
                    android:background="?attr/selectableItemBackground"
                    android:id="@+id/diveSummaryLayoutBuddy"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"/> <!-- Buddy end -->

                <!-- Instructor -->
                <LinearLayout
                    android:background="?attr/selectableItemBackground"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent">

                    <ImageView
                        android:contentDescription="@string/ic_instructor"
                        android:id="@+id/diveSummaryInstructorIcon"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_instructor_white" />

                    <TextView
                        android:id="@+id/diveSummaryInstructorValue"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/white" />
                </LinearLayout> <!-- Instructor end -->

            </LinearLayout> <!-- General section end -->



            <!-- *******************
                       Divider
                ******************** -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d7d7d7"/>



            <!-- *******************
                  Conditions section
                ******************** -->
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/conditionsSection"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:text="@string/dive_summary_conditions_section_title"
                    android:textColor="@color/white"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>

                <!-- Visibility -->
                <RelativeLayout
                    android:background="?attr/selectableItemBackground"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent">

                    <ImageView
                        android:contentDescription="@string/ic_visibility"
                        android:id="@+id/diveSummaryVisibilityIcon"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_visibility_white" />

                    <RatingBar
                        android:id="@+id/diveSummaryVisibilityValue"
                        android:isIndicator="true"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@id/diveSummaryVisibilityIcon"
                        android:layout_width="wrap_content"
                        android:numStars="5"
                        android:rating="0"
                        style="@style/foodRatingBar" />
                </RelativeLayout>

                <!-- Bottom temperature -->
                <LinearLayout
                    android:background="?attr/selectableItemBackground"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent">

                    <ImageView
                        android:contentDescription="@string/ic_thermometer"
                        android:id="@+id/diveSummaryBottomTemperatureIcon"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_thermometer_white" />

                    <TextView
                        android:id="@+id/diveSummaryBottomTemperatureValue"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/white" />
                </LinearLayout>

            </LinearLayout> <!-- Conditions section end -->



            <!-- *******************
                       Divider
                ******************** -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d7d7d7"/>




            <!-- *******************
                   Summary section
                ******************** -->
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/summarySection"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:text="@string/dive_summary_summary_section_title"
                    android:textColor="@color/white"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <!-- Duration -->
                    <LinearLayout
                        android:background="?attr/selectableItemBackground"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:layout_width="0dp">

                        <ImageView
                            android:contentDescription="@string/ic_duration"
                            android:id="@+id/diveSummaryTimeIcon"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_width="wrap_content"
                            android:src="@drawable/ic_duration_white" />

                        <TextView
                            android:id="@+id/diveSummaryDurationValue"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_width="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <!-- Max depth -->
                    <LinearLayout
                        android:background="?attr/selectableItemBackground"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:layout_width="0dp">

                        <ImageView
                            android:contentDescription="@string/ic_depth"
                            android:id="@+id/diveSummaryMaxDepthIcon"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_width="wrap_content"
                            android:src="@drawable/ic_depth_white" />

                        <TextView
                            android:id="@+id/diveSummaryMaxDepthValue"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_width="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <!-- Time in -->
                    <LinearLayout
                        android:background="?attr/selectableItemBackground"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:layout_width="0dp">

                        <ImageView
                            android:contentDescription="@string/ic_depth"
                            android:id="@+id/diveSummaryTimeInIcon"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_width="wrap_content"
                            android:src="@drawable/ic_time_in_white" />

                        <TextView
                            android:id="@+id/diveSummaryTimeInValue"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_width="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <!-- Time out -->
                    <LinearLayout
                        android:background="?attr/selectableItemBackground"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:layout_width="0dp">

                        <ImageView
                            android:contentDescription="@string/ic_depth"
                            android:id="@+id/diveSummaryTimeOutIcon"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_width="wrap_content"
                            android:src="@drawable/ic_time_out_white" />

                        <TextView
                            android:id="@+id/diveSummaryTimeOutValue"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_width="wrap_content"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Decompression -->
                <LinearLayout
                    android:background="?attr/selectableItemBackground"
                    android:id="@+id/diveSummaryLayoutDecompression"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"/> <!-- Decompression end -->

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Edit button -->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/diveSummaryFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:backgroundTint="@color/white"
        app:srcCompat="@android:drawable/ic_menu_edit" />

</FrameLayout>
