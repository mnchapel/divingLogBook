<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:contentDescription="@string/ic_buddy"
        android:id="@+id/diveSummaryEditBuddyIcon"
        android:labelFor="@+id/diveSummaryEditBuddyValue"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_buddy_white" />

    <EditText
        android:hint="@string/dive_summary_hint_buddy"
        android:id="@+id/diveSummaryEditBuddyValue"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:inputType="textCapWords"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/white"
        android:textColorHint="@color/whiteGray"/>
</LinearLayout>