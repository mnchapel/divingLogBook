<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ap="http://schemas.android.com/apk/res-auto"
    android:background="#f1f1f1"
    android:orientation="vertical">

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent" >

        <LinearLayout
            android:background="#FFFFFF"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingTop="20dp">


            <LinearLayout
                android:background="#FFFFFF"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:orientation="vertical">

                <com.mnchapel.divinglogbook.LineGraph
                    android:id="@+id/diveChartLineGraph"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!-- Chart -->
            <com.androidplot.xy.XYPlot
                style="@style/APDefacto.Dark"
                android:id="@+id/plot"
                android:layout_width="fill_parent"
                android:layout_height="327dp"
                ap:title="A Simple XY Plot"
                ap:rangeTitle="range"
                ap:domainTitle="domain"
                ap:lineLabels="left|top"
                ap:lineLabelRotationTop="0"
                ap:backgroundColor="@color/white"
                ap:graphBackgroundColor="@color/white"
                ap:gridBackgroundColor="@color/blue"
                ap:lineLabelTextColorTop="@color/black"
                ap:lineLabelTextColorLeft="@color/black"
                ap:domainOriginLineColor="@color/black"
                ap:rangeOriginLineColor="@color/black"
                ap:marginBottom="0dp"
                ap:marginTop="0dp"
                ap:marginLeft="0dp"
                ap:marginRight="0dp"
                ap:lineLabelAlignTop="center"
                ap:lineLabelInsetTop="-1dp"/>

            <!-- Time text -->
            <TextView
                android:id="@+id/diveChartTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Time"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/black" />

            <!-- Time value -->
            <TextView
                android:id="@+id/diveChartTimeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/black" />

            <!-- Depth text -->
            <TextView
                android:id="@+id/diveChartDepthText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Depth"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/black" />

            <!-- Depth value -->
            <TextView
                android:id="@+id/diveChartDepthValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/black" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
